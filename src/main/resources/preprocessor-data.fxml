<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.TextFieldTableCell?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="kkrasilnikovv.preprocessor.controller.DataController"
            xmlns="http://javafx.com/javafx/11">
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10">
            <Button text="Сохранить в файл" onAction="#saveToFile"/>
            <Button text="Назад" onAction="#backup"/>
            <Button text="Загрузить данные из файла" onAction="#loadEvent"/>
        </HBox>
    </top>
    <center>
        <TabPane fx:id="tabPane">
            <Tab text="Узлы" closable="false">
                <VBox>
                    <TableView fx:id="pointTable" editable="true">
                        <columns>
                            <TableColumn text="#" prefWidth="40" fx:id="idColumn" editable="false">
                                <cellFactory>
                                    <TextFieldTableCell fx:factory="forTableColumn"/>
                                </cellFactory>
                            </TableColumn>
                            <TableColumn fx:id="fxColumn" text="Fx" prefWidth="60">
                                <cellFactory>
                                    <TextFieldTableCell fx:factory="forTableColumn"/>
                                </cellFactory>
                            </TableColumn>
                            <TableColumn text="Fy" prefWidth="60" fx:id="fyColumn">
                                <cellFactory>
                                    <TextFieldTableCell fx:factory="forTableColumn"/>
                                </cellFactory>
                            </TableColumn>
                        </columns>
                    </TableView>
                    <HBox spacing="10">
                        <Button text="Добавить" onAction="#addPoint"/>
                        <Button text="Удалить" onAction="#deletePoint"/>
                    </HBox>
                </VBox>
            </Tab>
            <Tab text="Стержни" closable="false">
                <VBox>
                    <TableView fx:id="beamTable" editable="true">
                        <columns>
                            <TableColumn text="#" prefWidth="40" fx:id="beamIdColumn" editable="false">
                                <cellFactory>
                                    <TextFieldTableCell fx:factory="forTableColumn"/>
                                </cellFactory>
                            </TableColumn>
                            <TableColumn fx:id="startPointColumn" text="Начало" prefWidth="100">
                            </TableColumn>
                            <TableColumn fx:id="endPointColumn" text="Конец" prefWidth="100">
                            </TableColumn>
                        </columns>
                    </TableView>
                    <HBox spacing="10">
                        <Button text="Добавить" onAction="#addBeam"/>
                        <Button text="Удалить" onAction="#deleteBeam"/>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
